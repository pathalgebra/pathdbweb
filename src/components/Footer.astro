---
import data from '../data/footer.json';
import Logo from './Logo.astro';
---

<footer class="rounded-lg shadow dark:bg-gray-900 py-24 md:p-16 ">
    <div class="w-full  mx-auto p-4 md:py-8 ">
        <div class="sm:flex sm:items-center sm:justify-between">
            <a href="/" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
                <Logo />
                <span class="self-center text-2xl font-semibold whitespace-nowrap ">{data.name}</span>
            </a>
            <ul class="flex flex-wrap items-center mb-6 text-sm font-medium sm:mb-0 ">

                {data.liks.map((item) => <li>
                    <a href={item.link} class="hover:underline me-4 md:me-6">{item.name}</a>
                </li>)}
            </ul>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
        <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">Â© {new Date().getFullYear()} <a href="/" class="hover:underline">{data.name}</a>. All Rights Reserved.</span>
    </div>
</footer>

