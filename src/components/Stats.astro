---
import stats from "../data/stats.json";
import '../styles/observer.css';
---

<section class="py-32 sm:py-20 bg-gray-950   text-white observed fade ">

    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <dl class="grid grid-cols-1 gap-x-8 gap-y-16 text-center lg:grid-cols-3">
        
        {stats.map((stat) => (
          <div class="mx-auto flex max-w-xs flex-col gap-y-4">
        <dt class="text-base/7 text-gray-400 ">{stat.description}</dt>
        <dd class="order-first text-3xl font-semibold tracking-tight text-gray-200 sm:text-5xl">{stat.value}</dd>
      </div>
    ))}
    </dl>
  </div>
</section>

<style>
  .bor{
    border: 6px solid red;
  }
</style>