---
import data from '../data/caracteristics.json';
---

<section class="mt-20 md:mt-18 " id="about">

    <div class="mx-auto py-10 sm:py-20 lg:py-20 ">
        <p class="text-center font-medium ">CARACTERISTICAS</p>
        <h2 class="text-center text-xl md:text-4xl font-semibold tracking-tight sm:text-3xl">{data.title}</h2>
        <div class="flex flex-wrap flex-col md:flex-row justify-center gap-8 p-8 pt-10">
            {data.content.map((item) => 
            <div class="min-w-[300px] p-8 lg:w-1/3">
                <div class="flex gap-4">
                <img class="w-10 bg-[#4f46e5] rounded-full p-2" src={item.icon} alt="icon" aria-hidden="true" />
                <h3 class="text-balanced text-xl font-semibold tracking-tight sm:text-2xl">{item.title}</h3>
                </div>
                <p class="mt-4 text-balanced text-lg font-medium text-gray-500 md:ml-14">{item.description}</p>
            </div>
            )}
        </div>
    </div>  
    <div class="absolute inset-x-0 md:-translate-y-48  -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%)] rotate-180 scale-50 md:scale-75" aria-hidden="true">
      <div class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
    </div>
 
</section>