---
import data from '../data/contact.json'
import '../styles/observer.css';
---

<section class="overflow-x-hidden">
    <div class="container px-8 py-16 mx-auto" id="contact">
        <div class="lg:flex lg:items-center lg:-mx-6">
            <div class="lg:w-1/2 lg:mx-6">
                <h1 class="text-2xl text-pretty font-semibold capitalize dark:text-white lg:text-3xl">
                    {data.title}
                </h1>
                
                <div class="mt-6 space-y-8 md:mt-8">
                    <p class="flex items-start -mx-2">
                        
                        
                        <img src="/pathdbweb/ubication.svg" alt="contact" class="w-6" />
                        <span class="mx-2 text-gray-700 w-72 dark:text-gray-400">
                            {data.ubi}
                        </span>
                    </p>

                    <p class="flex items-start -mx-2">
                        

                        <img src="/pathdbweb/phone.svg" alt="contact" class="w-6" />
                        <span class="mx-2 text-gray-700 w-72 dark:text-gray-400">{data.phone}</span>
                    </p>

                    <p class="flex items-start -mx-2">

                        <img src="/pathdbweb/mail.svg" alt="contact" class="w-6" />
                        <span class="mx-2 text-gray-700 w-72 dark:text-gray-400">{data.email}</span>
                    </p>
                </div>

            </div>

            <div class="mt-8 lg:w-1/2 lg:mx-6 observed fade-right">
                <div
                    class="w-full px-8 py-10 mx-auto overflow-hidden bg-white rounded-lg shadow-2xl dark:bg-gray-800 lg:max-w-xl shadow-gray-300/50 dark:shadow-black/50">
                    <h1 class="text-lg font-medium ">{data.formtitle}</h1>

                    <form class="mt-6">
                        <div class="flex-1">
                            <label class="block mb-2 text-sm text-gray-600 dark:text-gray-200">{data.form1}</label>
                            <input type="text" placeholder={data.form1placeholder} class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                        </div>

                        <div class="flex-1 mt-6">
                            <label class="block mb-2 text-sm text-gray-600 dark:text-gray-200">{data.form2}</label>
                            <input type="email" placeholder={data.form2placeholder} class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                        </div>

                        <div class="w-full mt-6">
                            <label class="block mb-2 text-sm text-gray-600 dark:text-gray-200">{data.form3}</label>
                            <textarea class="block w-full h-32 px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md md:h-48 dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" placeholder={data.form3placeholder}></textarea>
                        </div>

                        <button class="w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-4">
                            {data.buttonText}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>